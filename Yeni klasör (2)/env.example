# WIN WIN ETH RAFFLE - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# NETWORK CONFIGURATION
# ==========================================

# Network to use: 'base' or 'sepolia'
NEXT_PUBLIC_NETWORK=base

# BASE Network (Mainnet)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_CHAIN_ID=8453
NEXT_PUBLIC_BASE_CONTRACT_ADDRESS=0x_YOUR_BASE_CONTRACT_ADDRESS

# Ethereum Sepolia (Testnet)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
NEXT_PUBLIC_SEPOLIA_CHAIN_ID=11155111
NEXT_PUBLIC_SEPOLIA_CONTRACT_ADDRESS=0x_YOUR_SEPOLIA_CONTRACT_ADDRESS

# ==========================================
# WALLET & WALLET CONNECT
# ==========================================

# WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ==========================================
# RAFFLE CONFIGURATION
# ==========================================

# Ticket price in ETH (e.g., 0.001)
NEXT_PUBLIC_TICKET_PRICE=0.001

# Maximum tickets per round
NEXT_PUBLIC_MAX_TICKETS=1000

# Round duration in seconds (e.g., 3600 = 1 hour)
NEXT_PUBLIC_ROUND_DURATION=3600

# ==========================================
# ADMIN CONFIGURATION
# ==========================================

# Admin secret key for admin panel access
ADMIN_SECRET_KEY=your-super-secure-admin-key-change-this

# Admin wallet address (for contract owner operations)
NEXT_PUBLIC_ADMIN_WALLET=0x_YOUR_ADMIN_WALLET_ADDRESS

# ==========================================
# API & EXTERNAL SERVICES
# ==========================================

# Alchemy API Key (for Ethereum RPC)
ALCHEMY_API_KEY=your_alchemy_api_key

# Infura API Key (alternative RPC provider)
INFURA_API_KEY=your_infura_api_key

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# BaseScan API Key (for contract verification on BASE)
BASESCAN_API_KEY=your_basescan_api_key

# ==========================================
# DATABASE (if using)
# ==========================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/winwinraffle

# ==========================================
# LOGGING & MONITORING
# ==========================================

# Enable detailed logging (true/false)
NEXT_PUBLIC_DEBUG_MODE=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ==========================================
# DEPLOYMENT
# ==========================================

# Vercel Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==========================================
# SECURITY
# ==========================================

# JWT Secret (if implementing authentication)
JWT_SECRET=your-jwt-secret-key-change-this

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# ==========================================
# FARCASTER MINI APP
# ==========================================

# Farcaster App Configuration
NEXT_PUBLIC_FARCASTER_APP_URL=https://your-app-domain.com
NEXT_PUBLIC_FARCASTER_APP_NAME=WIN WIN ETH Raffle
NEXT_PUBLIC_FARCASTER_APP_ICON=https://your-app-domain.com/icon.png

# ==========================================
# NOTES
# ==========================================

# 1. Never commit the actual .env file to version control
# 2. Always use strong, unique values for secrets and keys
# 3. Rotate keys regularly for production environments
# 4. For BASE mainnet, ensure you have sufficient ETH for gas fees
# 5. Test thoroughly on Sepolia before deploying to mainnet
